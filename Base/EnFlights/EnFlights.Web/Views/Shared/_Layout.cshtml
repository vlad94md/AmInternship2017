<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - EnFlights Air Company</title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <link rel="apple-touch-icon" sizes="76x76" href="../../Content/Template/x_material_kit_free_v1.1.1/assets/img/apple-icon.png">
    <link rel="icon" type="image/png" href="../../Content/Template/x_material_kit_free_v1.1.1/assets/img/favicon.png">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

    <!--     Fonts and icons     -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons" />
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" />
    <!-- CSS Files -->
    <link href="../../Content/Template/x_material_kit_free_v1.1.1/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="../../Content/Template/x_material_kit_free_v1.1.1/assets/css/material-kit.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="landing-page">
    <nav class="navbar navbar-transparent navbar-absolute">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation-example">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="http://www.creative-tim.com"><i class="fa fa-plane" aria-hidden="true"></i> EnFlights</a>
            </div>
            <div class="collapse navbar-collapse" id="navigation-example">
                <ul class="nav navbar-nav navbar-left">
                    <li>
                        <a href="../components-documentation.html" target="_blank"  class="btn btn-simple btn-white">
                            Offers
                        </a>
                    </li>
                    <li>
                        <a href="" target="_blank"  class="btn btn-simple btn-white">
                            Information
                        </a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                            Timetable 
                            <b class="caret"></b>
                            <div class="ripple-container"></div>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-right">
                            <li class="dropdown-header">Timetable</li>
                            <li><a href="#">Online Schedule</a></li>
                            <li><a href="#">Destination map</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="https://www.facebook.com/CreativeTim" target="_blank" class="btn btn-simple btn-white">
                            About us
                        </a>
                    </li>
                    <li>
                        <a href="https://www.instagram.com/CreativeTimOfficial" target="_blank" class="btn btn-simple btn-white">
                            Contacts
                        </a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="https://twitter.com/CreativeTim" target="_blank" class="btn btn-simple btn-white">
                            <i class="fa fa-phone"></i> +373079289337
                        </a>                 
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                My Profile
                                <b class="caret"></b>
                                <div class="ripple-container"></div>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-right">
                                <li class="dropdown-header">My Profile</li>
                                <li><a href="#">Profile</a></li>
                                <li><a href="#">Bookings</a></li>
                                <li class="divider"></li>
                                <li><a href="#">Logout</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li>
                            <a href="https://twitter.com/CreativeTim" target="_blank" class="btn btn-simple btn-white">
                                <i class="material-icons">input</i> Login
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="wrapper">
        @RenderBody()
        <footer class="footer">
            <div class="container">
                <nav class="pull-left">
                    <ul>
                        <li>
                            <a href="http://www.creative-tim.com">
                                Offers
                            </a>
                        </li>
                        <li>
                            <a href="http://presentation.creative-tim.com">
                                Information
                            </a>
                        </li>
                        <li>
                            <a href="http://blog.creative-tim.com">
                                About Us
                            </a>
                        </li>
                        <li>
                            <a href="http://www.creative-tim.com/license">
                                Contacts
                            </a>
                        </li>
                    </ul>
                </nav>
                <div class="copyright pull-right">
                    &copy; @DateTime.Now.Year, made with <i class="fa fa-heart heart"></i> for AM Internship .NET
                </div>
            </div>
        </footer>
    </div>

    <!--   Core JS Files   -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="../../Content/Template/x_material_kit_free_v1.1.1/assets/js/material.min.js"></script>
    <!--  Plugin for the Sliders, full documentation here: http://refreshless.com/nouislider/ -->
    <script src="../../Content/Template/x_material_kit_free_v1.1.1/assets/js/nouislider.min.js" type="text/javascript"></script>
    <!--  Plugin for the Datepicker, full documentation here: http://www.eyecon.ro/bootstrap-datepicker/ -->
    <script src="../../Content/Template/x_material_kit_free_v1.1.1//assets/js/bootstrap-datepicker.js" type="text/javascript"></script>
    <!-- Control Center for Material Kit: activating the ripples, parallax effects, scripts from the example pages etc -->
    <script src="../../Content/Template/x_material_kit_free_v1.1.1/assets/js/material-kit.js" type="text/javascript"></script>
    @RenderSection("scripts", required: false)
</body>

</html>



